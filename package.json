{
  "name": "@jbagatta/config-engine",
  "version": "0.1.0",
  "description": "A type-enforced dynamic configuration engine library built on Nats Jetstream K/V",
  "type": "module",
  "author": "John Bagatta",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
